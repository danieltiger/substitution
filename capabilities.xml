<themeCapabilities>
   
   <themeName>Substitution</themeName>

   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>
   <aspectRatio>4:3</aspectRatio>
   <aspectRatio>3:2</aspectRatio>
   <aspectRatio>19.5:9</aspectRatio>
   <aspectRatio>21:9</aspectRatio>

   <fontSize>small</fontSize>
   <fontSize>medium</fontSize>

   <transitions name="slide">
      <label>Slide</label>
      <selectable>true</selectable>
      <systemToSystem>slide</systemToSystem>
      <systemToGamelist>slide</systemToGamelist>
      <gamelistToGamelist>slide</gamelistToGamelist>
      <gamelistToSystem>slide</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <transitions name="instant-slide">
      <label>Instant + Slide</label>
      <selectable>true</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>slide</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>slide</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <transitions name="instant">
      <label>Instant</label>
      <selectable>true</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>instant</systemToGamelist>
      <gamelistToGamelist>instant</gamelistToGamelist>
      <gamelistToSystem>instant</gamelistToSystem>
      <startupToSystem>instant</startupToSystem>
      <startupToGamelist>instant</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>

   <colorScheme name="colorful-light">
      <label>Colorful (Light)</label>
   </colorScheme>
   <colorScheme name="colorful-dark">
      <label>Colorful (Dark)</label>
   </colorScheme>
   <colorScheme name="dmg">
      <label>DMG</label>
   </colorScheme>
   <colorScheme name="famicom">
      <label>Famicom</label>
   </colorScheme>
   <colorScheme name="indigo-light">
      <label>Indigo (Light)</label>
   </colorScheme>
   <colorScheme name="indigo-dark">
      <label>Indigo (Dark)</label>
   </colorScheme>
   <colorScheme name="retro">
      <label>Retro</label>
   </colorScheme>

   <variant name="system-view-controllers">
      <label>Controller Images</label>
      <selectable>true</selectable>
   </variant>
   <variant name="system-view-colorful">
      <label>Colorful Images</label>
      <selectable>true</selectable>
   </variant>

</themeCapabilities>
